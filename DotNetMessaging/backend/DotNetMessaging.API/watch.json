{
  "$schema": "https://json.schemastore.org/dotnet-watch.json",
  "watch": [
    {
      "include": "**/*.cs",
      "exclude": [
        "**/bin/**",
        "**/obj/**"
      ]
    },
    {
      "include": "**/*.csproj"
    },
    {
      "include": "**/*.json",
      "exclude": [
        "**/bin/**",
        "**/obj/**",
        "**/node_modules/**"
      ]
    }
  ],
  "exclude": [
    "**/bin/**",
    "**/obj/**",
    "**/wwwroot/uploads/**",
    "**/*.db",
    "**/*.db-shm",
    "**/*.db-wal"
  ]
}



