@model CourseDto
@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
        {
            <img src="@Model.ThumbnailUrl" class="img-fluid mb-3" alt="@Model.Title">
        }
        <p>@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Level:</strong> @Model.Level</p>
        <p><strong>Created by:</strong> @Model.CreatorName</p>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Course Information</h5>
                <p>Lessons: @Model.LessonCount</p>
                <p>Enrollments: @Model.EnrollmentCount</p>
                @if (User.Identity!.IsAuthenticated)
                {
                    <form asp-controller="Enrollment" asp-action="Enroll" method="post" class="mt-3">
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary w-100">Enroll Now</button>
                    </form>
                }
                @if (User.IsInRole("ADMIN"))
                {
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">Edit Course</a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <button type="submit" class="btn btn-danger w-100">Delete Course</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h3>Lessons</h3>
    <a asp-controller="Lesson" asp-action="Index" asp-route-courseId="@Model.Id" class="btn btn-secondary">View All Lessons</a>
</div>

