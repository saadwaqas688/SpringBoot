@model List<CourseDto>
@{
    ViewData["Title"] = "My Courses";
}

<h2>My Enrolled Courses</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                    {
                        <img src="@course.ThumbnailUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">Continue Learning</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>You haven't enrolled in any courses yet.</p>
    <a asp-action="Index" class="btn btn-primary">Browse Courses</a>
}

