@model List<DiscussionPostDto>
@{
    ViewData["Title"] = "Discussion";
    var lessonId = ViewBag.LessonId ?? Model.FirstOrDefault()?.LessonId ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Discussion Forum</h2>
        <a asp-action="Create" asp-route-contentId="@ViewBag.ContentId" asp-route-lessonId="@lessonId" class="btn btn-primary">
            + New Post
        </a>
    </div>

    <!-- Create New Post Form -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Create New Post</h5>
        </div>
        <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" name="ContentId" value="@ViewBag.ContentId" />
                        <input type="hidden" name="LessonId" value="@lessonId" />
                <div class="mb-3">
                    <label for="Content" class="form-label fw-bold">Your Post</label>
                    <textarea name="Content" id="Content" class="form-control" rows="4" required placeholder="Share your thoughts, ask questions, or start a discussion..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>

    <!-- All Posts -->
    <div class="mb-4">
        <h4>All Posts (@Model.Count)</h4>
    </div>

    @if (Model.Any())
    {
        @foreach (var post in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="card-title mb-1">@post.UserName</h5>
                            <small class="text-muted">@post.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                        </div>
                        @if (ViewBag.CurrentUserId?.ToString() == post.UserId || User.IsInRole("ADMIN"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <form asp-action="Delete" asp-route-id="@post.Id" asp-route-contentId="@post.ContentId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        }
                    </div>
                    <p class="card-text">@Html.Raw(post.Content.Replace("\n", "<br/>"))</p>
                    
                    <!-- Reply Button -->
                    <div class="mt-3">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="toggleReplyForm(@post.Id)">
                            Reply (@post.Replies.Count)
                        </button>
                    </div>

                    <!-- Reply Form (Hidden by default) -->
                    <div id="replyForm-@post.Id" class="mt-3" style="display: none;">
                        <form asp-action="Create" method="post" class="border p-3 rounded bg-light">
                            <input type="hidden" name="ContentId" value="@post.ContentId" />
                            <input type="hidden" name="LessonId" value="@post.LessonId" />
                            <input type="hidden" name="ParentPostId" value="@post.Id" />
                            <div class="mb-2">
                                <label for="replyContent-@post.Id" class="form-label fw-bold">Your Reply</label>
                                <textarea name="Content" id="replyContent-@post.Id" class="form-control" rows="3" required placeholder="Write your reply..."></textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-sm btn-primary">Post Reply</button>
                                <button type="button" class="btn btn-sm btn-secondary" onclick="toggleReplyForm(@post.Id)">Cancel</button>
                            </div>
                        </form>
                    </div>

                    <!-- Replies -->
                    @if (post.Replies.Any())
                    {
                        <div class="mt-3 ms-4">
                            <h6 class="text-muted mb-2">Replies:</h6>
                            @foreach (var reply in post.Replies.OrderBy(r => r.CreatedAt))
                            {
                                <div class="card mb-2 border-start border-primary border-3">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <strong class="text-primary">@reply.UserName</strong>
                                                <small class="text-muted ms-2">@reply.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                                                <p class="mb-0 mt-1">@Html.Raw(reply.Content.Replace("\n", "<br/>"))</p>
                                            </div>
                                            @if (ViewBag.CurrentUserId?.ToString() == reply.UserId || User.IsInRole("ADMIN"))
                                            {
                                                <div>
                                                    <a asp-action="Edit" asp-route-id="@reply.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                                    <form asp-action="Delete" asp-route-id="@reply.Id" asp-route-contentId="@reply.ContentId" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <h5>No Posts Yet</h5>
            <p>Be the first to start a discussion! Click "New Post" above to create your first post.</p>
        </div>
    }

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Scripts {
    <script>
        function toggleReplyForm(postId) {
            const form = document.getElementById('replyForm-' + postId);
            if (form.style.display === 'none') {
                form.style.display = 'block';
            } else {
                form.style.display = 'none';
            }
        }
    </script>
}

