@model List<EnrollmentDto>
@{
    ViewData["Title"] = "Enrollments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Enrollments</h2>
        <span class="badge bg-primary">Total Enrollments: @Model.Count()</span>
    </div>

    <!-- Filter and Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Enrollments" class="row g-3">
                <div class="col-md-5">
                    <label for="courseId" class="form-label fw-bold">Filter by Course</label>
                    <select name="courseId" id="courseId" class="form-select" onchange="this.form.submit()">
                        <option value="">-- All Courses --</option>
                        @foreach (var course in ViewBag.Courses)
                        {
                            <option value="@course.Id" selected="@(ViewBag.SelectedCourseId != null && ViewBag.SelectedCourseId == course.Id)">
                                @course.Title
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label for="searchTerm" class="form-label fw-bold">Search by Course Name</label>
                    <input type="text" 
                           name="searchTerm" 
                           id="searchTerm" 
                           class="form-control" 
                           placeholder="Enter course name..." 
                           value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        üîç Search
                    </button>
                </div>
                @if (ViewBag.SelectedCourseId != null || !string.IsNullOrWhiteSpace(ViewBag.SearchTerm?.ToString()))
                {
                    <div class="col-12">
                        <a asp-action="Enrollments" class="btn btn-secondary btn-sm">Clear Filters</a>
                    </div>
                }
            </form>
        </div>
    </div>

    <!-- Enrollments Table -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Course Name</th>
                        <th>User Name</th>
                        <th>Enrolled At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model)
                    {
                        <tr>
                            <td>
                                <strong>@enrollment.CourseTitle</strong>
                            </td>
                            <td>@enrollment.UserName</td>
                            <td>@enrollment.EnrolledAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a asp-controller="Course" 
                                   asp-action="Details" 
                                   asp-route-id="@enrollment.CourseId" 
                                   class="btn btn-sm btn-outline-primary">
                                    View Course
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No Enrollments Found</h4>
            <p>
                @if (ViewBag.SelectedCourseId != null)
                {
                    <text>No users are enrolled in the selected course.</text>
                }
                else if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm?.ToString()))
                {
                    <text>No enrollments found matching your search criteria.</text>
                }
                else
                {
                    <text>There are no enrollments in the system yet.</text>
                }
            </p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-submit on search input enter key
        document.getElementById('searchTerm')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.form.submit();
            }
        });
    </script>
}

