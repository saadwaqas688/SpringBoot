@model List<EnrollmentDto>
@{
    ViewData["Title"] = "My Enrollments";
}

<h2>My Enrollments</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Enrolled At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.CourseTitle</td>
                    <td>@enrollment.EnrolledAt.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@enrollment.CourseId" class="btn btn-sm btn-primary">View Course</a>
                        <form asp-action="Unenroll" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to unenroll?');">
                            <input type="hidden" name="courseId" value="@enrollment.CourseId" />
                            <button type="submit" class="btn btn-sm btn-danger">Unenroll</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You haven't enrolled in any courses yet.</p>
    <a asp-controller="Course" asp-action="Index" class="btn btn-primary">Browse Courses</a>
}

