@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to LMS</h1>
    <p class="lead">Learning Management System</p>
    @if (!User.Identity!.IsAuthenticated)
    {
        <div class="mt-4">
            <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-2">Register</a>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg me-2">Browse Courses</a>
            <a asp-controller="Course" asp-action="MyCourses" class="btn btn-outline-primary btn-lg">My Courses</a>
        </div>
    }
</div>

