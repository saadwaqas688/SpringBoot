@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "All Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Users</h2>
        <span class="badge bg-primary">Total Users: @Model.Count()</span>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "ADMIN")
                                {
                                    <span class="badge bg-danger">@user.Role</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@user.Role</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="viewUserDetails('@user.Id')">
                                    View Details
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No users found</h4>
            <p>There are no users in the system yet.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function viewUserDetails(userId) {
            // You can implement user details view later
            alert('User ID: ' + userId + '\nUser details feature coming soon!');
        }
    </script>
}

